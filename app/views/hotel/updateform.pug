extend ../_shared/_master

block body
    if (message && message.length > 0)
        div.flash-message-red
            | #{message}
    form(id="register-form" class="form-vertical" action='/hotels' method="POST")
        fieldset
            div(id="legend")
                legend
                    | Update hotel Info
                    
            div(class="control-group")
                label(class="control-label" for="name")
                    | Name
                div(class="controls")
                    input(type="text" id="name" name="name" placeholder="" class="input-xlarge")
                    input(type="text" id="hotelId" name="hotelId" value=hotelId class="hidden")
                    input(type="text" name="_method" value="PUT" class="hidden")
                    p(class="help-block")
                        | Hotel name can contain any letters and numbers, spaces and special characters

            div(class="control-group")
                label(class="control-label" for="phone")
                    | Phone number
                div(class="controls")
                    input(type="text" id="phone" name="phone" placeholder="" class="input-xlarge")
                    p(class="help-block")
                        | Enter Phone number

            div(class="control-group")
                label(class="control-label" for="imageURL")
                    | Image
                div(class="controls")
                    input(type="text" id="imageURL" name="imageURL" placeholder="" class="input-xlarge")
                    p(class="help-block")
                        | Please enter valid image URL

            div(class="control-group")
                label(class="control-label" for="description")
                    | Description
                div(class="controls")
                    input(type="text" id="description" name="description" placeholder="" class="input-xlarge")
                    p(class="help-block")
                        | Please enter Hotel description

            div(class="control-group")
                div(class="controls")
                    button(class="btn btn-success")
                        | Edit Hotel Info


