extend ../admin/panel

block addoredit
    if (message && message.length > 0)
        div.flash-message-red
            | #{message}
    h2 Редактирай регион
    form.form-horizontal(method="POST", action="/regions")
        .form-group
            label.col-sm-3.control-label(for='imageURL') Изображение
            .col-sm-9
                input.form-control(type='text' name='imageURL' id='imageURL' placeholder='Адрес на изображението' required)
                input(type="text" id="regionId" name="regionId" value=regionId class="hidden")
                input(type="text" name="_method" value="PUT" class="hidden")
        .form-group
            label.col-sm-3.control-label(for='description') Кратко описание
            .col-sm-9
                textarea.form-control(name='description' id='description' placeholder='Описание')
        .form-group
            .col-sm-offset-3.col-sm-9
                input.btn.btn-primary(type='submit', value='Промени')