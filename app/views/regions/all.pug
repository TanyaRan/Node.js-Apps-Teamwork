extend ../_shared/_master

block body
    h1.htitle.text-center Изберете мечтан район!
    .hcards
        each region in context
            .hcard
                header
                    h2
                        a(href="/regions/" + region._id)
                            =region.name
                    h4
                        a(href="/regions?search=" + region.regionType)
                            =region.regionType
                img.img-responsive(src=region.imageURL, alt=region.name)
                .body
                    p
                        =region.description
                    img.img-responsive(src=region.mapURL, alt=region.name)