extend ../admin/panel

block addoredit
    if (message && message.length > 0)
        div.flash-message-green
            | #{message}
    if (error && error.length > 0)
        div.flash-message-red
            | #{error}
    h2 Редактиране на услуга
    form.form-horizontal(id="update-form" method="GET", action="")
        .form-group
            label.col-sm-3.control-label(for="serviceId")
                | Услуга за промяна
            .col-sm-9
                select.form-control(id="serviceId" name="serviceId")
                    each service in services
                        option(value=service._id) #{service.serviceType}
                p.form-text.text-muted
                    | Изберете услуга за редактиране
        .form-group
            label.col-sm-3.control-label(for="serviceType")
                | Вид услуга
            .col-sm-9
                select.form-control(id="serviceType" name="serviceType")
                    option(value='разходка с кон') разходка с кон
                        option(value='традиционни ястия') традиционни ястия
                        option(value='представяне на местни обичаи') представяне на местни обичаи
                        option(value='представяне на местни занаяти') представяне на местни занаяти
                        option(value='нестинарство') нестинарство
                        option(value='къпане във водопад') къпане във водопад
                        option(value='посещение на пещера') посещение на пещера
                        option(value='посещение на пещера без връщане') посещение на пещера без връщане
                        option(value='разходка с лодка и риболов') разходка с лодка и риболов
                        option(value='състезание с джипове') състезание с джипове
                        option(value='разходка с джип без връщане') разходка с джип без връщане
                p.form-text.text-muted
                    | Изберете вид на услугата
        .form-group
            label.col-sm-3.control-label(for='imageURL') Изображение
            .col-sm-9
                input.form-control(type='text' name='imageURL' id='imageURL' placeholder='Адрес на изображението')
        .form-group
            label.col-sm-3.control-label(for='description') 
                | Кратко описание
            .col-sm-9
                textarea.form-control(name='description' id='description' placeholder="Описание")
        .form-group
            label.col-sm-3.control-label(for='price') Цена на услугата
            .col-sm-9
                input.form-control(type='text' name='price' id='price' placeholder='Цена')
        .form-group
            .col-sm-offset-3.col-sm-3
                input.btn.btn-primary(type='submit', value='Промени')
    block scripts
        script(src='/public/js/requester.js')
        script(src='/public/js/service.js')